<div class="basic-form">
  <h1>Create a new book</h1>

  <%= form_with model: Book.new, local: true do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :author %>
    <%= f.text_field :author %>
    <%= f.label "ISBN", :ISBN %>
    <%= f.text_field :ISBN %>
    <%= f.submit "Submit" %>
  <% end %>
</div>
