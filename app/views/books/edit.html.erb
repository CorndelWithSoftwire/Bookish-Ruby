<div class="basic-form">
  <h1>Edit <%= @book.title %></h1>

  <%= form_with model: @book do |f| %>
    <%= label :book, :title %>
    <%= text_field :book, :title %>
    <%= label :book, :author %>
    <%= text_field :book, :author %>
    <%= label "ISBN", :book, :ISBN %>
    <%= text_field :book, :ISBN %>
    <%= f.submit "Submit" %>
  <% end %>
</div>

